# 服务器配置
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=True

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=2592000  # 30天

# 数据库配置
DB_TYPE=sqlite  # 或 postgresql
DB_USER=db_username
DB_PASSWORD=db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=db_name
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_MAX_OVERFLOW=10
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=1800

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 上传文件配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
IMAGE_CACHE_DIR_NAME=image_cache

# 腾讯云COS配置
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
COS_BUCKET_NAME=your_cos_bucket_name
COS_ENDPOINT_URL=your_cos_endpoint_url
COS_REGION_NAME=your_cos_region_name
COS_PUBLIC_DOMAIN=your_cos_public_domain

# LLM Provider配置
LLM_PROVIDER=grok  # 可选: openai, claude, grok, deepseek, qwen

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL_NAME=gpt-4o

# Anthropic (Claude) 配置
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL_NAME=claude-3-opus-20240229

# Grok配置
GROK_API_KEY=your_grok_api_key
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL_NAME=grok-3-latest

# Deepseek配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_MODEL_NAME=deepseek-chat

# Qwen配置
QWEN_API_KEY=your_qwen_api_key
QWEN_MODEL_NAME=qwen-plus
